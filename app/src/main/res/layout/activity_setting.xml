<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Cancel and Save buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Alarm Volume -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/alarmVolumeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Volume"
            android:textSize="16sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_toRightOf="@id/alarmVolumeLabel" />
    </RelativeLayout>

    <!-- Alarm Sound -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/alarmSoundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Sound"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="100dp"
            android:layout_toRightOf="@id/alarmSoundLabel"
            android:src="@drawable/volume" /> <!-- You'll need to provide your own icon here -->
    </RelativeLayout>

    <!-- Quote Enable/Disable -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/quoteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quote Enable/Disable"
            android:textSize="16sp" />

        <Switch
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/quoteLabel" />
    </RelativeLayout>

    <!-- Quiz Enable/Disable -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/quizLabel"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Quiz Enable/Disable"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Switch
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_toRightOf="@id/quizLabel" />
    </RelativeLayout>

    <!-- Night Mode -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/nightModeLabel"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:text="Night Mode"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Switch
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_toRightOf="@id/nightModeLabel" />
    </RelativeLayout>

</LinearLayout>
